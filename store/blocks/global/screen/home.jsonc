      "search-result-layout.customQuery#home_search",
      "modal-trigger#home__modal--children",
      "modal-trigger#home__modal--event"
    ]
  },

  "whatsapp-button":{
"props":{
  "logo": "assets/img/image-whatsapp.png",
  "phone": "3123400000",
